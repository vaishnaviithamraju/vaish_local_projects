<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top" style="background-color:lightskyblue">
        <div class="container">
            <div class="navbar-header" style="color:black">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span style="background-color:black" class="icon-bar"></span>
                    <span style="background-color:black" class="icon-bar"></span>
                    <span style="background-color:black" class="icon-bar"></span>
                </button>
                @Html.ActionLink("EMPLOYEE DATABASE ACCESS PAGE", "Index", "Employee", new { @style = "font-weight:bold;font-size:30px;font-variant:italic" })
            </div>
            
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="float:right">

                    <li>@Html.ActionLink("Home", "Index", "Employee")</li>
                    <li>@Html.ActionLink("About", "About", "Employee")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Employee")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
